# Gemfile for CoderFolio

source "https://rubygems.org"

gem "jekyll", "~> 4.4"
gem "jekyll-sass-converter", "3.1.0"
gem "jekyll-seo-tag"
gem "jekyll-feed"
gem "jekyll-remote-theme"

# Windows-specific: Better file watching performance
gem "wdm", ">= 0.1.0" if Gem.win_platform?

# Silence Ruby 3.5+ warning about logger
gem "logger"